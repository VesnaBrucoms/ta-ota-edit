<Window x:Class="OTAEdit.Views.MissionSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OTAEdit.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Mission Settings" WindowStartupLocation="CenterScreen" Height="auto" Width="450" ResizeMode="NoResize" SizeToContent="Height">
    <Grid Margin="11,11,11,11">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="11" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="11" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="7" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="7" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <!-- <RowDefinition Height="1*" /> -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="7" />
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="7" />
                <ColumnDefinition Width="0.4*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Brief:" />
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Path=Brief, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Row="1" Grid.Column="2" Content="..." Command="{Binding Path=OpenBriefCommand}" />
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Narration:" />
            <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding Path=Narration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Row="1" Grid.Column="6" Content="..." Command="{Binding Path=OpenNarrationCommand}" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Glamour shot:" />
            <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Text="{Binding Path=Glamour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Row="4" Grid.Column="6" Content="..." Command="{Binding Path=OpenGlamourCommand}" />

            <!-- <Image Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Visibility="Collapsed" Source="{Binding Path=Image, Mode=OneWay}" /> -->
        </Grid>

        <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Header="Victory conditions">
            <Grid Margin="4,4,4,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="11" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="11" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Row="0" Grid.Column="0">Kill enemy commander</CheckBox>
                <CheckBox Grid.Row="0" Grid.Column="2">Destroy all units</CheckBox>

                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="11" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="11" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Row="0" Grid.Column="0">Move unit to radius:</CheckBox>
                    <TextBox Margin="18,0,0,0" Grid.Row="1" Grid.Column="0" />

                    <CheckBox Grid.Row="0" Grid.Column="2">Kill unit:</CheckBox>
                    <TextBox Margin="18,0,0,0" Grid.Row="1" Grid.Column="2" />

                    <CheckBox Grid.Row="3" Grid.Column="0">Capture unit:</CheckBox>
                    <TextBox Margin="18,0,0,0" Grid.Row="4" Grid.Column="0" />

                    <CheckBox Grid.Row="3" Grid.Column="2">Build unit:</CheckBox>
                    <TextBox Margin="18,0,0,0" Grid.Row="4" Grid.Column="2" />
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Header="Defeat conditions">
            <Grid Margin="4,4,4,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="11" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="11" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Row="0" Grid.Column="0">Commander killed</CheckBox>
                <CheckBox Grid.Row="0" Grid.Column="2">All units killed</CheckBox>

                <CheckBox Grid.Row="2" Grid.Column="0">All units kiiled of type:</CheckBox>
                <TextBox Margin="18,0,0,0" Grid.Row="3" Grid.Column="0" />
            </Grid>
        </GroupBox>
        
        <Button Grid.Row="6" Grid.Column="1" IsDefault="True" Content="Accept" Click="WindowAccept_Click" />
        <Button Grid.Row="6" Grid.Column="3" IsCancel="True" Content="Cancel" Click="WindowCancel_Click" />
    </Grid>
</Window>
